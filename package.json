{
  "name": "iso17025-change-management-system",
  "version": "1.0.0",
  "description": "Sistema completo de gestión de cambios, auditoría de usuarios, backup y administración de incidentes para ISO 17025",
  "main": "app/Modules/AlertSystem/alert_server.js",
  "scripts": {
    "start": "node app/Modules/AlertSystem/alert_server.js",
    "serve": "php -S localhost:8000 -t public",
    "dev": "concurrently \"npm run serve\" \"lite-server\"",
    "test": "node --test --test-concurrency=1 tests/js/*.test.js tests/validation/*.test.js",
    "test:server": "node tools/scripts/test-server.js",
    "alerts:scheduler": "php app/Modules/Calibraciones/alert_scheduler.php --daemon",
    "calibrator:ingest": "node tools/scripts/calibrator_ingest.js",
    "install-system": "php install_change_management_system.php",
    "start-services": "start_sistema_completo.bat",
    "stop-services": "stop_sistema.bat",
    "backup": "php app/Modules/BackupSystem/backup_scheduler.php --job=manual_backup",
    "cleanup": "php maintenance/cleanup_old_logs.php",
    "health-check": "curl -s http://localhost:3001/api/system/health"
  },
  "keywords": [
    "calibraciones",
    "iso 17025",
    "php",
    "bootstrap"
  ],
  "author": "Lourdes Marién Ávila López",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lite-server": "^2.6.1"
  },
  "configurations": [
    {
      "type": "php",
      "request": "launch",
      "name": "Listen for Xdebug",
      "port": 9003
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Node.js Tests",
      "program": "${workspaceFolder}/test/basic_test.js"
    },
    {
      "type": "php",
      "request": "launch",
      "name": "Launch Built-in Web Server",
      "program": "${workspaceFolder}/${input:phpEntryPoint}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "php",
      "runtimeArgs": [
        "-S",
        "localhost:8000"
      ]
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "phpEntryPoint",
      "description": "Select the PHP entry point to launch",
      "options": [
        "public/index.php",
        "app/Core/auth.php",
        "app/Core/db.php"
      ]
    }
  ]
}
